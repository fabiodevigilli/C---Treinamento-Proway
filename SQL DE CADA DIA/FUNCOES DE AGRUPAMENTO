-------- FUNÇÕES DE AGRUPAMENTO: MAX, MIN, COUNT, AVG, SUM (Usados com múltiplas linhas)
-- Obtendo valor máximo:
SELECT MAX(NOTA) FROM FREQUENTA; -- PARA SABER A MAIOR NOTA
SELECT MAX(DATANASCIMENTO) FROM ALUNO; -- PARA SABER A MAIOR DATA DE NASCIMENTO, NO CASO, SERIA A DATA MAIS RECENTE
SELECT MAX(NOME) FROM ALUNO; -- PARA SABER QUAL A LETRA INICIAL SEJA A MAIS DISTANTE DO ALFABETO.

-- Obtendo o valor mínimo:
SELECT MIN(NOTA) FROM FREQUENTA -- PARA SABER A MENOR NOTA
SELECT MIN(DATANASCIMENTO) FROM ALUNO; -- PARA SABER A MENOR DATA DE NASCIMENTO, NO CASO, SERIA A DATA MAIS ANTIGA
SELECT MIN(NOME) FROM ALUNO; -- PARA SABER QUAL A PRIMEIRA LETRA SEJA A MAIS PRÓXIMA DA INICIAL DO ALFABETO.

-- Função Count: (Conta a determinada quantidade de determinada coisa) -- não considera nulos
SELECT COUNT(*) FROM ALUNO
SELECT COUNT(BAIRRO) FROM ALUNO
SELECT COUNT(DISTINCT SEXO) FROM ALUNO

-- Função AVG (média aritmética)
SELECT AVG(NOTA) FROM FREQUENTA

-- Função Sum (soma de elementos)
SELECT SUM(NOTA) FROM FREQUENTA

-- EXERCÍCIOS AULA 7
-- 7-1: SELECT MAX(NOTA) AS 'Nota Máxima', MIN(NOTA) AS 'Nota Mínima', SUM(FALTA) AS 'Total Faltas', AVG(NOTA) AS 'Média das Notas', SUM(NOTA) AS 'Total das Notas' FROM FREQUENTA
-- 7-2: SELECT COUNT(falta) FROM FREQUENTA;
-- 7-3: SELECT MAX(DATANASCIMENTO) AS 'Mais Novo', MIN(DATANASCIMENTO) AS 'Mais Velho' FROM PROFESSOR