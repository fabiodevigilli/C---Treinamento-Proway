------ FUNÇÕES DE CONVERSÃO
-- SELECT * FROM FREQUENTA WHERE NOTA = '8' -- CONVERSÃO IMPLICITA CONVERTE DE STRING PARA NUMBER AUTOMATICAMENTE

-- Equivalente a TO_CHAR(DATANASCIMENTO,'YYYY')
SELECT NOME, DATANASCIMENTO FROM ALUNO WHERE (CONVERT(VARCHAR, YEAR(DATANASCIMENTO))) = '1990' -- http://www.sqlines.com/oracle-to-sql-server/to_char_datetime
SELECT CONVERT(VARCHAR(19), CURRENT_TIMESTAMP, 20)
SELECT ROUND(AVG(NOTA),2) FROM FREQUENTA

-- Equivalente a TO_DATE('22-OUT-1991', 'DD-Mon,YYYY')
SELECT NOME, DATANASCIMENTO FROM ALUNO WHERE DATANASCIMENTO = TRY_CONVERT(DATE,'1990-06-25',102) -- https://stackoverflow.com/questions/45074493/use-to-date-in-sql-server-2012
SELECT NOME, DATANASCIMENTO FROM ALUNO WHERE DATANASCIMENTO = TRY_CONVERT(DATE,'1990-Jun-25',102)

SELECT NOME, DATANASCIMENTO FROM ALUNO WHERE DATANASCIMENTO = TRY_CAST('10/22/1991' AS datetime)

-- ISNULL EQUIVALENTE A NVL Conversão de valor Nulo (qualquer operação com valor nulo, será nulo)
SELECT MATRICULA, ISNULL(NOTA,0), ISNULL(NOTA+1,0) AS 'Nova Nota' FROM FREQUENTA -- http://blog.dbsolution.com.br/o-que-e-o-equivalente-a-funcao-nvl-do-oracle-no-sql-server/
-- TERÍAMOS TAMBÉM O COALESCE
SELECT MATRICULA, COALESCE(NOTA,0), COALESCE(NOTA+1,0) AS 'Nova Nota' FROM FREQUENTA